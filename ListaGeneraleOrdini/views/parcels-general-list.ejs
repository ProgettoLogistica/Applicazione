</head>

<body>
    <table>
        <thead>
            <tr>
                <th>ID Pacco</th>
                <th>Stato Pacco</th>
            </tr>
        </thead>
        <tbody>
            <%
            if(parcels.length != 0){
                var i=1;
                parcels.forEach(parcel =>{
        %>
            <tr>
                <td><%=i; %></td>

                <td id="position">
                    <script>
                        function giveAddress(lon, lat) {
                            fetch('http://nominatim.openstreetmap.org/reverse?format=json&lon=' + lon + '&lat=' + lat).then(function (response) {
                                return response.json();
                            }).then(function (json) {
                                console.log(json.display_name);
                                document.getElementById('position').innerHTML = json.display_name;
                            })
                        }
                    </script>
                </td>
            </tr>
            <%      i++; }) %>
            <% } else { %>

            <tr>
                <td>You haven't parcels!</td>
            </tr>

            <% } %>
        </tbody>
    </table>
</body>

</html>


